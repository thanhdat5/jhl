<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title</title>

    <link href="~/Content/template-admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/template-admin/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/template-admin/css/animate.css" rel="stylesheet">
    <link href="~/Content/template-admin/css/style.css" rel="stylesheet">
    @RenderSection("head", required: false)
</head>

<body>

    <div id="wrapper">

        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="side-menu">
                    <li class="nav-header">

                        <div class="dropdown profile-element text-center">
                            <span>
                                <img alt="image" width="48" height="48" class="img-circle" src="~/Content/template-admin/img/profile_small.jpg">
                            </span>
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="clear">
                                    <span class="block m-t-xs">
                                        <strong class="font-bold">Oải Hương Tím</strong>
                                    </span> <span class="text-muted text-xs block">Lập trình viên <b class="caret"></b></span>
                                </span>
                            </a>
                            <ul class="dropdown-menu animated fadeInRight m-t-xs">
                                <li><a href="/Admin/Users/Profile">Thông tin cá nhân</a></li>
                                <li class="divider"></li>
                                <li><a href="/Admin/Home/Logout">Đăng xuất</a></li>
                            </ul>
                        </div>
                        <div class="logo-element">
                            JHL
                        </div>

                    </li>
                    <li class="active">
                        <a href="/Admin"><i class="fa fa-th-large"></i> <span class="nav-label">Tổng quan</span></a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-newspaper-o"></i> <span class="nav-label">Bài viết </span> <span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li><a href="/Admin/Posts/Create">Thêm mới</a></li>
                            <li><a href="/Admin/Posts/Index">Tất cả bài viết</a></li>
                            <li><a href="/Admin/Categories/Index">Chuyên mục</a></li>
                            <li><a href="/Admin/Tags/Index">Thẻ bài viết</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-comments-o"></i> <span class="nav-label">Bình luận </span> <span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li><a href="/Admin/Comments/UnRead">Chưa đọc</a></li>
                            <li><a href="/Admin/Comments/Index">Tất cả bình luận</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="/Admin/Pages/Index"><i class="fa fa-file-code-o"></i> <span class="nav-label">Trang</span></a>
                    </li>
                    <li>
                        <a href="/Admin/Sliders/Index"><i class="fa fa-caret-square-o-right"></i> <span class="nav-label">Slider</span></a>
                    </li>
                    <li>
                        <a href="/Admin/Advertisements/Index"><i class="fa fa-thumb-tack"></i> <span class="nav-label">Quảng cáo</span></a>
                    </li>
                    <li>
                        <a href="/Admin/Images/Index"><i class="fa fa-camera-retro"></i> <span class="nav-label">Thư viện ảnh</span></a>
                    </li>
                    <li>
                        <a href="/Admin/Users/Index"><i class="fa fa-users"></i> <span class="nav-label">Người dùng </span></a>
                    </li>
                    <li>
                        <a href="/Admin/Statistics/Index"><i class="fa fa-bar-chart-o"></i> <span class="nav-label">Thống kê</span></a>
                    </li>
                    <li>
                        <a href="/Admin/Configs/Index"><i class="fa fa-cogs"></i> <span class="nav-label">Cấu hình</span></a>
                    </li>
                </ul>

            </div>
        </nav>

        <div id="page-wrapper" class="gray-bg">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top  " role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                    </div>
                    <ul class="nav navbar-top-links navbar-right">
                        <li>
                            <span class="m-r-sm text-muted welcome-message">Chào mừng bạn đến với trang quản lý JHL...</span>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
                                <i class="fa fa-bell"></i>  <span class="label label-primary">8</span>
                            </a>
                            <ul class="dropdown-menu dropdown-alerts">
                                <li>
                                    <a href="mailbox.html">
                                        <div>
                                            <i class="fa fa-envelope fa-fw"></i> You have 16 messages
                                            <span class="pull-right text-muted small">4 minutes ago</span>
                                        </div>
                                    </a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a href="profile.html">
                                        <div>
                                            <i class="fa fa-twitter fa-fw"></i> 3 New Followers
                                            <span class="pull-right text-muted small">12 minutes ago</span>
                                        </div>
                                    </a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a href="grid_options.html">
                                        <div>
                                            <i class="fa fa-upload fa-fw"></i> Server Rebooted
                                            <span class="pull-right text-muted small">4 minutes ago</span>
                                        </div>
                                    </a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <div class="text-center link-block">
                                        <a href="notifications.html">
                                            <strong>See All Alerts</strong>
                                            <i class="fa fa-angle-right"></i>
                                        </a>
                                    </div>
                                </li>
                            </ul>
                        </li>


                        <li>
                            <a href="/Admin/Home/Logout">
                                <i class="fa fa-sign-out"></i> Đăng xuất
                            </a>
                        </li>
                    </ul>

                </nav>
            </div>
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-sm-4">
                    <h2>@Page.Title</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="/Admin">Bảng điều khiển</a>
                        </li>
                        <li class="active">
                            <strong>@ViewBag.Breadcrumb</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-sm-8">
                    <div class="title-action">
                        <a href="/" target="_blank" class="btn btn-primary">Xem trang chủ</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <br />
                    @RenderBody()
                </div>
                <div class="footer">
                    <div class="pull-right">
                        Thiết kế bởi <a href="https://handsomeroot.blogspot.com" target="_blank"><strong>Oải Hương Tím</strong></a>.
                    </div>
                    <div>
                        <span>Copyright &copy; <strong>@DateTime.Now.Year</strong> Bản quyền thuộc về</span> <a href="/" target="_blank"><strong>JHL</strong></a>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/Content/template-admin/js/jquery-1.10.2.js"></script>
    <script src="~/Content/template-admin/js/bootstrap.min.js"></script>
    <script src="~/Content/template-admin/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/Content/template-admin/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <!-- Custom and plugin javascript -->
    <script src="~/Content/template-admin/js/inspinia.js"></script>
    <script src="~/Content/template-admin/js/plugins/pace/pace.min.js"></script>
    <script src="~/Scripts/app/common.js"></script>
    @RenderSection("foot", required: false)
</body>

</html>

